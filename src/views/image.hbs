<div class="card">
    <div class="card-header  bg-dark text-white d-flex justify-content-between algin-items-center">
        <h2>{{image.title}}</h2><button class="btn btn-outline-danger" id="btn-delete" data-id="{{image.uniqueID}}">
            <i class="fa fa-times"></i><span>Borrar imagen</span>
        </button>
    </div>
    <div class="card-body p-2">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" alt="{{image.title}}" class="img-fluid"><br>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-outline-success " id="btn-like" data-id="{{image.uniqueID}}">
            <i class="fas fa-thumbs-up">
            </i>Me gusta</button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p class="views-count">
            {{image.views}}
            <i class="fas fa-eye"></i>
        </p>
        <p>
            <i class="far fa-clock"></i>{{timeAgo image.timeStamp}}
        </p>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment"></i> Comentar

        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueID}}/comment" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Tu comentario"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i>Publicar
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text center">
                        <img src="http://picsum.photos/seed/{{email}}/75" class="mb-2 p-1">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} {{timeAgo timeStamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
</div>